<head>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
  <script src="scripts.js"></script>
  <link rel="stylesheet" href="css/profile.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
  <title>Profile</title>
</head>
​

<body>
  <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
  <div class="container bootdey flex-grow-1 container-p-y">
    ​

    <div class="media align-items-center py-3 mb-3">
      <img src="https://bootdey.com/img/Content/avatar/avatar1.png" alt="" class="d-block ui-w-100 rounded-circle">
      <div class="media-body ml-4">
        <h4 class="font-weight-bold mb-0"><%=user.name;  %> <span
            class="text-muted font-weight-normal">@<%=user.username  %> </span></h4>
        <div class="text-muted mb-2"></div>
        <a href="/edit" class="btn btn-primary btn-sm">Edit</a>&nbsp;
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>&nbsp;
        <a href="javascript:void(0)" class="btn btn-default btn-sm icon-btn"><i class="fa fa-mail"></i></a>
      </div>
    </div>
    <div class="card mb-4">
      <div class="card-body">
        <table class="table user-view-table m-0">
          <tbody>
            <tr>
              <td>Email:</td>
              <td><%=user.email  %> </td>
            </tr>
            <tr>
              <td>Contact:</td>
              <td><%=user.email  %> </td>
            </tr>
          </tbody>
        </table>
      </div>
      <hr class="border-light m-0">
      <div class="table-responsive">
        <table class="table card-table m-0">
          <tbody>
            <tr>
              <th></th>
              <th><a class="new" href="/newPost"> New Post</a></th>
              <th><a class="publications" href="/publications">Publications</a></th>

            </tr>
          </tbody>
        </table>
      </div>
    </div>
    <div class="card">
      <div class="row no-gutters row-bordered">
        <div class="d-flex col-md align-items-center">
          <a href="/followers" class="card-body d-block text-body">
            <div class="text-muted small line-height-1">Followers</div>
            <div class="text-xlarge"><%=user.followers.length;  %> </div>
          </a>
        </div>
        <div class="d-flex col-md align-items-center">
          <a href="/following" class="card-body d-block text-body">
            <div class="text-muted small line-height-1">Following</div>
            <div class="text-xlarge"><%=user.followings.length;  %></div>
          </a>
        </div>
        <div class="d-flex col-md align-items-center">
          <a href="/publications" class="card-body d-block text-body">
            <div class="text-muted small line-height-1">Post</div>
            <div class="text-xlarge"><%=user.posts.length;  %></div>
          </a>
        </div>
      </div>
      <hr class="border-light m-0">
      <div class="card-body">
        <h6 class="mt-4 mb-3">Social links</h6>
        <table class="table user-view-table m-0">
          <tbody>
            <tr>
              <td>Twitter:</td>
              <td><a href="<%=user.twitter; %>"><%=user.twitter; %> </a></td>
            </tr>
            <tr>
              <td>Facebook:</td>
              <td><a href="<%=user.facebook; %> "><%=user.facebook; %> </a></td>
            </tr>
            <tr>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
    ​
  </div>
</body>